{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "github": {
    "silent": true
  },
  "crons": [
    {
      "path": "/api/cron/updateData",
      "schedule": "0 18 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/events",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://krooster.com https://www.krooster.com http://localhost:3000"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        },
        {
          "key": "Vary",
          "value": "Origin"
        }
      ]
    }
  ]
}